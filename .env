# ------------------------
# App Settings
# ------------------------
APP_NAME=MunichTechEXPO
APP_ENV=production
APP_KEY=base64:vWe4ZG2DSIIP5EFg3gutVeHlILOGaA1mwrPzjJGLmyc=  # Run `php artisan key:generate --show` locally
APP_DEBUG=false
APP_URL=https://munichtech-expo-2026-2.onrender.com

# ------------------------
# Logging
# ------------------------
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ------------------------
# Database (SQLite)
# ------------------------
DB_CONNECTION=sqlite
DB_DATABASE=/var/www/html/database/database.sqlite

# ------------------------
# Caching, Sessions, Filesystem
# ------------------------
CACHE_DRIVER=file
SESSION_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync

# ------------------------
# Mail (optional, dev/testing)
# ------------------------
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# ------------------------
# Broadcast / Real-time (optional)
# ------------------------
BROADCAST_DRIVER=log

# ------------------------
# Redis / Memcached (optional)
# ------------------------
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
MEMCACHED_HOST=127.0.0.1

# ------------------------
# AWS S3 (optional)
# ------------------------
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ------------------------
# Pusher / Vite
# ------------------------
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"
